extends layout

block content
    h1 Request
    if webpage
      //h3
        a(href=rootPath+"page/requests/"+webpage.webpage) << Requests #{webpage.webpage}
      h2
        a(href=rootPath+model+"/"+webpage._id) #{webpage.url}
      if webpage.webpage
        h3
          a Page: 
          a(href=rootPath+"page/"+webpage.webpage._id) #{webpage.webpage}
      .row
        .col-5
          p #{webpage.createdAt}
          p= "method: " + webpage.method
          p= "resourceType: " + webpage.resourceType
          p= "isNavigationRequest: " + webpage.isNavigationRequest
        .col-7
          a Headers:
          if webpage.headers
            pre.prettyprint.linenums(style="white-space: pre-wrap")
              each value, key in webpage.headers
                | #{key}: #{value}
                |
    else
      div.alert.alert-warning
        p No data