extends layout

block content
    .jumbotoron.text-center
      h3= title
    #table.col-md-12
      if webpages
        if webpages.length
          p= "total: "+webpages.length 
          table.table.table-striped.table-bordered.table-hover.table-sm
            tr.thead-dark
              th createdAt
              th url
              th method
              th resourceType
              th isNavigationRequest
            each webpage in webpages
              tr
                td= webpage.createdAt
                td
                  a(href="/" + model + "/" +webpage._id) #{webpage.url}
                td= webpage.method
                td= webpage.resourceType
                td= webpage.isNavigationRequest
      else if webpage
        div.col-md-6
          p #{webpage.createdAt}              
          h1
            a(href="/"+model+"/"+webpage._id) #{webpage.url}
          if webpage.webpage
            h2= webpage.method
            h3
              a(href="/page/"+webpage.webpage) from #{webpage.webpage}  
        div.col-md-6
          p= webpage.method
          p= webpage.resourceType
          p= webpage.isNavigationRequest
        div.col-md-12
          hr
          if webpage.content
            pre.prettyprint.linenums(style="white-space: pre-wrap") #{webpage.content}
          else if webpage.payload
            pre.prettyprint.linenums(style="white-space: pre-wrap") #{webpage.payload}
      else
        div.alert.alert-warning
          p No data