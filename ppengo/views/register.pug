extends layout

block content
  .container
    h1 Register
    br
    form(role='form', action=rootPath + "auth/register",method="post", style='max-width: 300px;')
      .form-group
        input.form-control(type='text', name="username", placeholder='Enter Username')
      .form-group
        input.form-control(type='password', name="password", placeholder='Password')

        //input(type="checkbox", id="admin", name="admin", value="")

      input(type="hidden" name="_csrf", value=csrfToken)
      button.btn.btn-primary(type='submit') Submit
      a(href='/')
        button.btn.btn-secondary(type="button") Cancel